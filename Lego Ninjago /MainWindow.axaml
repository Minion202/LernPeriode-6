<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Lego_Ninjago.MainWindow"
        Title="Lego Ninjago"
        Background="DimGray"
        MinWidth="720" MinHeight="420"
        Width="900" Height="560">

  <Grid RowDefinitions="Auto,*">
    <TextBlock Grid.Row="0"
               Text="Welcome to Pick your Ninja!"
               FontSize="40"
               Foreground="Black"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,16,0,8"/>

    <Grid Grid.Row="1" Margin="16"
          RowDefinitions="*,*,*" ColumnDefinitions="*,*,*">
      
      <Button x:Name="BtnCole"
              Grid.Row="0" Grid.Column="0"
              Background="Black" Foreground="AliceBlue"
              FontWeight="Bold"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Margin="8" MinWidth="160" MinHeight="120">
        <Viewbox Stretch="Uniform">
          <TextBlock Text="COLE"/>
        </Viewbox>
      </Button>

      <Button x:Name="BtnJay"
              Grid.Row="0" Grid.Column="2"
              Background="DarkBlue" Foreground="AliceBlue"
              FontWeight="Bold"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Margin="8" MinWidth="160" MinHeight="120">
        <Viewbox Stretch="Uniform">
          <TextBlock Text="JAY"/>
        </Viewbox>
      </Button>

      <Button x:Name="BtnLloyd"
              Grid.Row="1" Grid.Column="1"
              Background="DarkGreen" Foreground="AliceBlue"
              FontWeight="Bold"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Margin="8" MinWidth="160" MinHeight="120">
        <Viewbox Stretch="Uniform">
          <TextBlock Text="LLOYD"/>
        </Viewbox>
      </Button>

      <Button x:Name="BtnKai"
              Grid.Row="2" Grid.Column="0"
              Background="Brown" Foreground="AliceBlue"
              FontWeight="Bold"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Margin="8" MinWidth="160" MinHeight="120">
        <Viewbox Stretch="Uniform">
          <TextBlock Text="KAI"/>
        </Viewbox>
      </Button>

      <Button x:Name="BtnZane"
              Grid.Row="2" Grid.Column="2"
              Background="AliceBlue" Foreground="Black"
              FontWeight="Bold"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Margin="8" MinWidth="160" MinHeight="120">
        <Viewbox Stretch="Uniform">
          <TextBlock Text="ZANE"/>
        </Viewbox>
      </Button>

    </Grid>
  </Grid>
</Window>
